<%- include('./partials/header'); -%>
    <div class="row main-row">
        <%- include('./partials/categories-menu'); -%>
            <div class="col-lg-8">
                <h2 class="main-title">
                    <%= mealsTitle %>
                </h2>
                <div class="main-flex">
                    <% meals.forEach((meal, index) => { %>
                        <div class="card m-2 p-2 w-25">
                            <a href="/meals/<%= meal.idMeal %>/index/<%= index %>">
                                <img src="<%= meal.strMealThumb %>" class="card-img-top w-100" alt="meal">
                            </a>
                            <div class="card-body py-2">
                                <h6 class="card-title text-center">
                                    <%= meal.strMeal %>
                                </h6>
                                <div class="card-params">
                                    <form action="/cart" method="POST">
                                        <span>
                                            <%= meal.price %>
                                        </span>
                                        <span class="qty-wrap">
                                            <span class="qty-minus"><i class="fa fa-minus"></i></span>
                                        <input type="number" name="qty" class="qty" value="1" min="1" style="width: 60px;">
                                        <span class="qty-plus"><i class="fa fa-plus"></i></span>
                                        </span>
                                        <input type="hidden" name="mealID" value="<%= meal.idMeal %>">
                                        <input type="hidden" name="image" value="<%= meal.strMealThumb %>">
                                        <input type="hidden" name="title" value="<%= meal.strMeal %>">
                                        <input type="hidden" name="price" value="<%= meal.price %>">
                                        <button type="submit" class="btn btn-warning ml-auto p-2">
                                            <i class="fas fa-cart-arrow-down"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
            <%- include('./partials/areas-menu'); -%>
    </div>
    <%- include('./partials/footer'); -%>