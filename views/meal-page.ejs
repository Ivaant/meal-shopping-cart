<%- include('./partials/header'); -%>

    <div class="row main-row">
        <%- include('./partials/categories-menu'); -%>
            <div class="col-lg-4">
                <h2 class="main-title">
                    <%= title %>
                </h2>
                <div class="card m-2 p-2">
                    <img src="<%= picture %>" alt="<%= title %>">
                    <div><span>Category: </span>
                        <span class="font-weight-bold"><%= category %></span>
                    </div>
                    <div><span>Cuisine: </span>
                        <span class="font-weight-bold"><%= cuisine %></span>
                    </div>
                    <div class="card-params">
                        <span>
                    <%= price %>
                </span>
                        <form action="/cart" method="POST">
                            <span class="qty-wrap">
                        <span class="qty-minus"><i class="fa fa-minus"></i></span>
                            <input type="number" name="qty" class="qty" value="1" min="1" style="width: 60px;">
                            <span class="qty-plus"><i class="fa fa-plus"></i></span>
                            </span>
                            <input type="hidden" name="mealID" value="<%= mealID %>">
                            <input type="hidden" name="image" value="<%= picture %>">
                            <input type="hidden" name="title" value="<%= title %>">
                            <input type="hidden" name="price" value="<%= price %>">
                            <button type="submit" class="btn btn-warning ml-auto p-2">
                           Add to Cart <i class="fas fa-cart-arrow-down"></i>
                        </button>
                        </form>
                    </div>
                </div>
                <div class="p-3">
                    <h3 class="text-left">Ingredients:</h3>
                    <table>
                        <% ingredients.forEach(elem => { %>
                            <tr>
                                <td>
                                    <%= elem.ingredient %>
                                </td>
                                <td class="text-right">
                                    <%= elem.measure %>
                                </td>
                            </tr>
                            <% }); %>
                    </table>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="p-3">
                    <h3 class="text-center">
                        Recipe:
                    </h3>
                    <p class="text-left">
                        <%= recipe %>
                    </p>
                </div>
                <div class="card m-2 p-2">
                    <h5>Video Recipe</h5>
                    <div class="videoWrapper">
                        <iframe width="680" height="510" src="https://www.youtube.com/embed/<%= movie.slice(-11) %>">
                        </iframe>
                    </div>
                </div>`

            </div>
            <%- include('./partials/areas-menu'); -%>
    </div>

    <%- include('./partials/footer'); -%>